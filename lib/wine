simuler_reboot ()
{
	N1="0"
	N2="0"
	if [ ! "$1" = "" ]
	then
		N1="$1"
	fi
	if [ ! "$2" = "" ]
	then	
		N2="$2"
	fi
	attendre "$(eval_gettext "Simulating Windows reboot")" "wine wineboot" "" "$N1" "$N2" "1" "" 1
}
simulate_reboot ()
{
	simuler_reboot "$@"
}
select_prefixe ()
{
	export WINEPREFIX="$1"
	export DOSPREFIX="$1" # For dosbox support
}
select_prefix ()
{
	select_prefixe "$@"
}
creer_prefixe ()
{
	N1="0"
	N2="0"
	if [ ! "$1" = "" ]
	then
		N1="$1"
	fi
	if [ ! "$2" = "" ]
	then	
		N2="$2"
	fi
	attendre "$(eval_gettext 'Creating Wine prefix')" "wine wineprefixcreate" "" "$N1" "$N2" "1" "" 0 "$(eval_gettext "Done")"
	set_user_dir
	set_programfile_dir
	fonts_to_prefixe
}
read_prefixes()
{
	cd "$REPERTOIRE/wineprefix"
	LIST_FILE=""
	for file in *
	do	
		if [ "$LIST_FILE" = "" ]
		then
			LIST_FILE="$file" 
		else
			LIST_FILE+="~$file"
		fi
	done
	echo $LIST_FILE
}
polprefixcreate()
{
	creer_prefixe "$@"
}
