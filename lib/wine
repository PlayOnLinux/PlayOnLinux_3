		echo "\"DefaultBitsPerSample\"=\"$1\"" >> $REPERTOIRE/tmp/sndBitsPerSample.reg
		wine regedit $REPERTOIRE/tmp/sndBitsPerSample.reg
		rm $REPERTOIRE/tmp/sndBitsPerSample.reg -f
	fi
}




