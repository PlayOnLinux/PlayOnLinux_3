	then
		echo "[HKEY_CURRENT_USER\Software\Wine\X11 Driver]" > $REPERTOIRE/tmp/managed.reg
		echo "\"DXGrab\"=\"N\"" >> $REPERTOIRE/tmp/managed.reg
