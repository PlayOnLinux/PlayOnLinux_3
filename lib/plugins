mkdir -p "$REPERTOIRE/plugins"
cd "$REPERTOIRE/plugins"
for file in *
do
	MY_FILE="$REPERTOIRE/plugins/$file"
	if [ -e "$MY_FILE/enabled" ]
	then
		#echo "Loading $file"
		if [ -e "$MY_FILE/scripts/lib" ]
		then
			source "$MY_FILE/scripts/lib"
		fi
	fi
done

cd "$REPERTOIRE"
