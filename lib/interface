		N2=0
	else
		N2=$5
	fi

	if [ ! "$6" ]
	then
		CANCEL=1
	else
		CANCEL=$6
	fi
	message=${1//"\n"/
}
	if [ ! "$7" ]
	then
		IMAGE="divers.png"
