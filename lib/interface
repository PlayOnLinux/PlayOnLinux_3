{
	# 1 = Message
	# 2 = Items
	# 3 = Titre
	# 4 = Numéro de l'étape
	# 5 = Nombre d'étapes
	# 6 = Bouton annuler [ 1 = Oui, 0 = Non ]
	# 7 = Image
	# 8 = Where To Cut
	# 9 = Suivant 

	if [ ! "$3" ]
