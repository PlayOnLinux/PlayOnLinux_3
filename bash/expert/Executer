if [ "$PLAYONLINUX" = "" ]
then
exit 0
fi
source "$PLAYONLINUX/lib/sources"
cfg_check

export TITLE="$(eval_gettext "Run a local script")"

cd $HOME
POL_SetupWindow_Init "$PLAYONLINUX/etc/setups/exec/top.png" "$PLAYONLINUX/etc/setups/exec/left.jpg"

POL_SetupWindow_free_presentation "$(eval_gettext "Run a local script")" "$(eval_gettext "This wizard will help you run an unofficial PlayOnLinux Script.")"

POL_SetupWindow_browse "$(eval_gettext 'Choose a valid PlayOnLinux script to run.')" "$(eval_gettext "Run a local script")" ""
SCRIPT="$APP_ANSWER"
if [ "$?" = "1" ]
then
	POL_SetupWindow_Close
	exit
fi
if [ ! -e "$SCRIPT" ]
then
	POL_SetupWindow_message "$(eval_gettext "File not found!")" "$(eval_gettext "Error!")"
	POL_SetupWindow_Close
	exit
fi
POL_SetupWindow_Close
POL_Bash "$SCRIPT"
exit 
